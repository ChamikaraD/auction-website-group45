@model IEnumerable<Project_1.Models.Payment>

@{
    ViewData["Title"] = "Payment Records";
}

<div class="container mt-5 text-light">
    <h2 class="mt-4 mb-3 text-center" style="font-family: 'Playfair Display', serif; color: #D4AF37;">Payment Records</h2>

    <table class="table table-dark table-striped table-bordered">
        <thead>
            <tr>
                <th>Payment ID</th>
                <th>Listing ID</th>
                <th>Listing Title</th>
                <th>Amount (Rs)</th>
                <th>Payment Date</th>
                <th>User ID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pay in Model)
            {
                <tr>
                    <td>@pay.PaymentId</td>
                    <td>@pay.ListingId</td>
                    <td><a asp-controller="Listings" asp-action="Details" asp-route-id="@pay.ListingId" style="color:#D4AF37;">@(pay.Listing?.Title ?? "N/A")</a></td>
                    <td>@pay.Amount.ToString("N2")</td>
                    <td>@pay.PaymentDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@pay.UserId</td>
                </tr>
            }
        </tbody>
    </table>
</div>